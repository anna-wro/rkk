{
  "name": "rkk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest && npm run check-formatting && npm run lint",
    "test:watch": "jest --watch",
    "check-formatting": "prettier --check './src/**/*.{ts,tsx}'",
    "fix-formatting": "prettier --write './src/**/*.{ts,tsx}'",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "11.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@editorjs/editorjs": "^2.22.2",
    "@editorjs/header": "^2.6.1",
    "@editorjs/list": "^1.6.2",
    "@editorjs/paragraph": "^2.8.0",
    "@testing-library/dom": "^7.26.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.1.2",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.56",
    "autoprefixer": "^10.2.6",
    "babel-jest": "^26.6.3",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.5",
    "prettier": "^2.3.1",
    "react-editor-js": "^1.10.0",
    "tailwindcss": "^2.2.2",
    "typescript": "^4.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "npm run fix-formatting"
    ]
  }
}
